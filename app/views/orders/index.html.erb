<h2>My Orders</h2><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Product ID</th>
      <th>User ID</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% i = 1 %>
    <% @Orders.each do |order| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= order.product.name%></td>
        <td><%= order.user.email %></td>
        <td><%= order.total %></td>
        <% i = i+1 %>
      </tr>
    <% end %>
  </tbody>
</table>

